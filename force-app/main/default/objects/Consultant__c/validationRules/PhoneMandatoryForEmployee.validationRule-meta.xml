<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PhoneMandatoryForEmployee</fullName>
    <active>true</active>
    <description>Phone Number Field mandatory for Employees</description>
    <errorConditionFormula>AND( ISPICKVAL( Type__c, &quot;Employee&quot; ), ISBLANK( Phone__c ) )</errorConditionFormula>
    <errorDisplayField>Phone__c</errorDisplayField>
    <errorMessage>Please Enter your Phone Number (Mandatory for Employees)</errorMessage>
</ValidationRule>
